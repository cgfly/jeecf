<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
	namespace="org.jeecf.manager.module.template.dao.GenFieldColumnDao">

	<sql id="columnList">
		genFieldColumn.id AS "id",
		genFieldColumn.gen_field_id AS "genFieldId",
		genFieldColumn.name AS "name",
		genFieldColumn.is_null AS "isNull",
		genFieldColumn.default_value AS "defaultValue",
		genFieldColumn.description
		AS "description",
		genFieldColumn.remark
		AS "remark",
		genFieldColumn.create_date AS "createDate",
		genFieldColumn.create_by AS "createBy",
		genFieldColumn.update_date AS
		"updateDate",
		genFieldColumn.update_by AS "updateBy"
	</sql>

	<sql id="commonWhere">
		<where>
			<if test="data != null">
				<if test="data.genFieldId != null and data.genFieldId != 0 ">
					And genFieldColumn.gen_field_id = #{data.genFieldId}
				</if>
				<if test="data.name != null and data.name != '' ">
					And genFieldColumn.name = #{data.name}
				</if>
				<if test="data.description != null and data.description != '' ">
					And genFieldColumn.description = #{data.description}
				</if>
				<include refid="reginWhere" />
			</if>
			<include refid="containWhere" />
		</where>
	</sql>

	<!-- 通用范围区间查询 -->
	<sql id="reginWhere">
		<if test="data.beginCreateDate != null">
			And genFieldColumn.create_date &gt;=
			#{data.beginCreateDate}
		</if>
		<if test="data.endCreateDate != null">
			And genFieldColumn.create_date &lt;= #{data.endCreateDate}
		</if>
		<if test="data.beginUpdateDate != null">
			And genFieldColumn.update_date &gt;=
			#{data.beginUpdateDate}
		</if>
		<if test="data.endUpdateDate != null">
			And genFieldColumn.update_date &lt;= #{data.endUpdateDate}
		</if>
	</sql>

	<!-- in 和 not in的通用查询where -->
	<sql id="containWhere">
		<if test="contains != null and contains.size > 0">
			<foreach item="item" index="i" collection="contains">
				And ${item.columnName} in
				<foreach item="value" index="i"
					collection="item.columnValue" separator="," open="(" close=")">
					#{value}
				</foreach>
			</foreach>
		</if>
	</sql>

	<!-- 通用排序处理 -->
	<sql id="commonSorts">
		<if test="sorts != null and sorts.size > 0">
			ORDER BY
			<foreach collection="sorts" item="item" separator=",">
				${item.columnName} ${item.sortMode}
			</foreach>
		</if>
		<if test="sorts == null">
			ORDER BY genFieldColumn.update_date desc
		</if>
	</sql>

	<!-- 关联查询 -->
	<sql id="leftJoinColumn">
	</sql>



	<select id="query"
		resultType="org.jeecf.manager.module.template.model.result.GenFieldColumnResult">
		select
		<include refid="columnList" />
		from
		gen_field_column genFieldColumn
		<include refid="leftJoinColumn" />
		<include refid="commonWhere" />
		<include refid="commonSorts" />
		<if test="page != null">
			limit ${page.startNo},${page.size}
		</if>
	</select>

	<select id="get"
		resultType="org.jeecf.manager.module.template.model.result.GenFieldColumnResult">
		select
		<include refid="columnList" />
		from
		gen_field_column genFieldColumn
		<include refid="leftJoinColumn" />
		where genFieldColumn.id = #{id}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into gen_field_column
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="genFieldId != null">
				gen_field_id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="isNull != null">
				is_null,
			</if>
			<if test="defaultValue != null">
				default_value,
			</if>
			<if test="description != null">
				description,
			</if>
			<if test="remark != null">
				remark,
			</if>
			<if test="createDate != null">
				create_date,
			</if>
			<if test="createBy != null">
				create_by,
			</if>
			<if test="updateDate != null">
				update_date,
			</if>
			<if test="updateBy != null">
				update_by,
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="genFieldId != null">
				#{genFieldId},
			</if>
			<if test="name != null">
				#{name},
			</if>
			<if test="isNull != null">
				#{isNull},
			</if>
			<if test="defaultValue != null">
				#{defaultValue},
			</if>
			<if test="description != null">
				#{description},
			</if>
			<if test="remark != null">
				#{remark},
			</if>
			<if test="createDate != null">
				#{createDate},
			</if>
			<if test="createBy != null">
				#{createBy},
			</if>
			<if test="updateDate != null">
				#{updateDate},
			</if>
			<if test="updateBy != null">
				#{updateBy},
			</if>
		</trim>
	</insert>

	<update id="update">
		update gen_field_column
		<set>
			<if test="genFieldId != null">
				gen_field_id = #{genFieldId},
			</if>
			<if test="isNull != null">
				is_null = #{isNull},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="defaultValue != null">
				default_value = #{defaultValue},
			</if>
			<if test="description != null">
				description = #{description},
			</if>
			<if test="updateDate != null">
				update_date = #{updateDate},
			</if>
			<if test="updateBy != null">
				update_by = #{updateBy}
			</if>
		</set>
		where id = #{id}
	</update>


	<select id="count" resultType="int">
		select count(1) from
		gen_field_column
	</select>

	<delete id="delete">
		delete from gen_field_column
		<where>
			<if test="id != null and id != '' ">
				And id = #{id}
			</if>
			<if test="genFieldId != null and genFieldId != '' ">
				And gen_field_id = #{genFieldId}
			</if>
		</where>
	</delete>

</mapper>